<table class="standard">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Price</th>
      <th>Ad Price</th>
      <th>Host</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr class="<%= cycle('odd','even') %>">
        <td><%= image_tag item.pic, style: "max-width: 100px;" %></td>
        <td><%= item.title %></td>
        <td><%= item.price_txt %></td>
        <td><%= item.ad_price_txt %></td>
        <td><%= link_to item.yard_sale.user.name, yard_sale_path(item.yard_sale) %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) if can?(:edit,item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } if can?(:destroy,item) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

