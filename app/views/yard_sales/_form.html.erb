<%= form_for(@yard_sale) do |f| %>
  <% if @yard_sale.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@yard_sale.errors.count, "error") %> prohibited this yard_sale from being saved:</h2>

      <ul>
      <% @yard_sale.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :start, "Sale Starts at:" %><br>
    <%= f.datetime_select :start %>
  </div>
  <div class="field">
    <%= f.check_box :end_enable,
      onclick: "$enable_field( $(this), $('#end_field'));" %>
    <%= f.label :end_enable, "This is a Multiday Event" %>
  </div>
  <div class="field" id="end_field">
    <%= f.label :end, "Sale Ends at:" %><br>
    <%= f.datetime_select :end %>
  </div>
  <script>
    $(document).on(
      'page:load ready',
      $enable_field(
        $('input#yard_sale_end_enable'),
        $('#end_field')
      )
    );
  </script>
  <div class="field">
    <%= f.label :address, "Address:" %><br>
    <%= f.text_field :address %>
  </div>
  <div class="field">
    <%= f.label :zip, "ZIP code:" %><br>
    <%= f.number_field :zip %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
